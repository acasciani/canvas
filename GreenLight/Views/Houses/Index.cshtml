@model IEnumerable<GreenLight.House>

@{
    ViewBag.Title = "Index";
}

<h2>Target Neighborhood</h2>

<p>
    @Html.ActionLink("Add New House", "Create") | @Html.ActionLink("Run Geocoder", "GeoCode", "HousesToCanvas")
</p>

@if (Model.Count() > 0) { 
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model) {
        <tr>
            <td class="col-xs-4">
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td class="col-xs-3">
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td class="col-xs-2">
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td class="text-right">
                @Html.ActionLink("Edit", "Edit", new { id = item.HouseID }) |
                @Html.ActionLink("Details", "Details", new { id = item.HouseID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HouseID })
            </td>
        </tr>
    }

    </table>
}
else
{
    <strong>No houses added</strong>
}
